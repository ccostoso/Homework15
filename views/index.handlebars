<div class="container d-flex flex-column justify-content-center">
    <img src="/assets/img/burger.png" alt="Burger image" class="mt-4 mx-auto burger-img"> 

    <h1 class="display-4 font-weight-bold text-center my-4">Eat-Da-Burger!</h2>

    <div class="row my-4">
        <ul class="list-group col-md-6 mx-auto px-4">
            <li class="list-group-item active">Uneaten Burgers</li>
            {{#each burger}}
                {{#unless devoured}}
                    {{> burgers/burgers-block devoured=false}}
                {{/unless}}
            {{/each}}
        </ul>

        <ul class="list-group col-md-6 mx-auto px-4">
            <li class="list-group-item active">Devoured Burgers</li>
            {{#each burger}}
                {{#if devoured}}
                    {{> burgers/devoured-block devoured=true}}
                {{/if}}
            {{/each}}
        </ul>
    </div>

    <form action="/api/burger" method="post" class="input-group my-4 mx-auto col-md-8 p-0">
        <input class="form-control" id="new-burger-input" type="text" placeholder="Add a New Burger!"
            aria-placeholder="Add a New Burger!">
        </input>
        <div class="input-group-append">
            <button id="new-burger-submit" type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>